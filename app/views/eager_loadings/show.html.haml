= turbo_frame_tag :main_content do
  .row
    .col-12.col-sm-6.offset-sm-3.col-md-4.offset-md-4
      .card
        .card-header
          .float-end
            = link_to :reload, '#', data: { controller: 'turbo-frame-reload',
                                            action: 'click->turbo-frame-reload#reload',
                                            target_frame: :quote_content }
            (
            = link_to :no_stimulus, show_data_eager_loading_path, data: { turbo_frame: :quote_content }
            )
          Quote
        .card-body
          = turbo_frame_tag :quote_content, src: show_data_eager_loading_path do
            .d-flex.align-items-center
              %strong Loading...
              .spinner-border.ms-auto{ role: "status", aria: { hidden: "true" } }
