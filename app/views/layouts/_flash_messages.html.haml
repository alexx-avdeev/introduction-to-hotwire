- flash.each do |type, message|
  - message.reverse.chomp('>rb<').reverse.split('<br>').each do |m|
    %div{role: "alert",
         class: ['toast', 'align-items-center', 'text-white', 'border-0', "bg-#{type}"],
         data: {controller: 'flash'},
         aria: {live: "assertive", atomic: "true"}}
      .d-flex
        .toast-body
          = raw m
        %button.btn-close.btn-close-white.me-2.m-auto{type: "button", data: {bs_dismiss: "toast"}, aria: {label: "Close"}}
